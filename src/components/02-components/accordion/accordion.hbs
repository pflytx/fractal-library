<div
  {{classlist
    "accordion"
    className
  }}
>
  <div class="accordion__inner-wrap">
    <input class="accordion__input a11y-visually-hidden" type="checkbox" id="{{id}}">
    <div class="accordion__item" aria-labelledby="{{id}}">
      <label class="accordion__label" for="{{id}}">
        <span class="accordion__decor bg--gradient"></span>
        <span class="accordion__title">{{title}}</span>
        <i class="accordion__indicator"></i>
      </label>

      <div class="accordion__content rich-text rhythm" role="region">
        {{#>@partial-block}}{{/@partial-block}}
      </div>
    </div>
  </div>
</div>

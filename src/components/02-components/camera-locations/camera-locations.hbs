{{#>@full-width-wrapper
  color="text"
  className="cs--filterable js-cs--filterable"
  rhythm="large"
  id="cs--featured"
}}

  {{#>@media-object variant="2-1" align="top" flipLarge="true" flipSmall="true"}}
    {{#>@media-figure classname="text--align-left"}}
      <div class="layout">
        <figure class="card--cs" data-cs-vehicle="construction">
          <img srcset="{{path (default logo '/images/vehicle-construction.png')}}, {{path (default logo-2x '/images/vehicle-construction@2x.png')}} 2x" src="{{path (default logo '/images/vehicle-construction.png')}}" alt="NFI logo">
        </figure>

        <figure class="card--cs" data-cs-vehicle="solidwaste">
          <img srcset="{{path (default logo '/images/vehicle-solid-waste.png')}}, {{path (default logo-2x '/images/vehicle-solid-waste@2x.png')}} 2x" src="{{path (default logo '/images/vehicle-solid-waste.png')}}" alt="NFI logo">
        </figure>

        <figure class="card--cs" data-cs-vehicle="transit">
          <img srcset="{{path (default logo '/images/vehicle-transit.png')}}, {{path (default logo-2x '/images/vehicle-transit@2x.png')}} 2x" src="{{path (default logo '/images/vehicle-transit.png')}}" alt="NFI logo">
        </figure>

        <figure class="card--cs" data-cs-vehicle="trucking">
          <img srcset="{{path (default logo '/images/vehicle-trucking.png')}}, {{path (default logo-2x '/images/vehicle-trucking@2x.png')}} 2x" src="{{path (default logo '/images/vehicle-trucking.png')}}" alt="NFI logo">
        </figure>
      </div>
    {{/@media-figure}}

     {{#>@media-body classname="rhythm--large"}}
      {{#>@heading variant="h3" className="color--white"}}
        Capture the story from all angles with side and back-up cameras
      {{/@heading}}

      <p class="color--white">To manage all aspects of safety and security, you need to see from every angle. Adding side and rear cameras and connecting them with the Lytx Hub™ Adapter means you’ll be able to verify workers compensation claims, reconstruct mystery damage, help your drivers avoid injury, and reconstruct all types of collision claims, including rear-end and sideswipe incidents. </p>

       <div class="form-wrapper form--inline js-form--filters">
         <fieldset class="rhythm--small">
          <label for="filter--vehicle" class="color--white">Learn how multiple views can support your industry</label>
          <div class="input--select transparent">
            <select class="transparent bg--text" id="filter--vehicle" name="filter--vehicle">
              <option value="Construction">Construction</option>
              <option value="SolidWaste">Solid Waste</option>
              <option value="Transit">Transit</option>
              <option selected value="Trucking">Trucking</option>
            </select>
          </div>
        </fieldset>
      </div>
    {{/@media-body}}
  {{/@media-object}}
{{/@full-width-wrapper}}

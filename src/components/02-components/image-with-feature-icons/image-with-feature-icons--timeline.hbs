                    {{/@list}}
                {{/@media-body}}
              {{/@media-object}}
            </li>
            <li>
              {{#>@media-object variant="default" flushed="true" noStack="true" align="top"}}
                {{#>@media-figure}}
                  {{#>@icon-2017 classname="img-with-feature-icons__feature-icon"}}{{/@icon-2017}}
                {{/@media-figure}}
                {{#>@media-body classname="img-with-feature-icons__body"}}

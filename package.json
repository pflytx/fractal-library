{
  "name": "wheel",
  "version": "1.0.0",
  "description": "A basic Fractal setup for a stand alone front end style guide.",
  "repository": "turnwithus/wheel",
  "bugs": {
    "url": "https://github.com/turnwithus/wheel/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -s clean lint:css lint:js -p css:prod build:webpack img:prod font:prod -s fractal:static",
    "dev": "npm-run-all -s clean lint:css lint:js -p img font css build:webpack:dev fractal:start",
    "start": "serve static",
    "clean": "rimraf public/{css/*,js/*,images/*}",
    "css": "postcss src/assets/css/*.css -d public -w",
    "css:prod": "postcss src/assets/css/*.css -c postcss.config.prod.json -d public",
    "font": "cpx \"src/assets/fonts/**/*.{eot,ttf,woff,woff2}\" public/fonts -w || true",
    "font:dev": "cpx \"src/assets/fonts/**/*.{eot,ttf,woff,woff2}\" public/fonts || true",
    "font:prod": "npm run font:dev && cpx \"public/fonts/**/*.{eot,ttf,woff,woff2}\" static/fonts",
    "fractal:start": "fractal start --sync",
    "fractal:static": "fractal build",
    "img": "cpx \"src/assets/images/**/*.{jpg,png,svg,gif}\" public/images -w || true",
    "img:prod": "imagemin src/assets/images/**/*.{jpg,png,svg,gif} --out-dir public/images || true",
    "js": "babel src/assets/js -w -o public/scripts.js --source-maps",
    "js:prod": "babel src/assets/js -o public/scripts.js --compact=true --minified=true",
    "lint:css": "stylelint src/assets/css/**/*.css || true",
    "lint:js": "eslint src/assets/js || true",
    "build:webpack": "webpack -p --env.prod",
    "build:webpack:dev": "webpack --env.dev --watch"
  },
  "engines": {
    "node": "^=6.11.3"
  },
  "author": "Turn",
  "license": "MIT",
  "dependencies": {
    "a11y-dialog": "^5.2.0",
    "date-fns": "^1.30.1",
    "dom-form-serializer": "^1.0.7",
    "dom-select": "^1.1.1",
    "es-serialize-json": "^1.0.0",
    "flickity": "^2.2.1",
    "flickity-imagesloaded": "^2.0.0",
    "gsap": "^2.1.3",
    "lodash.throttle": "^4.1.1",
    "object-assign": "^4.1.1",
    "querystringify": "^2.1.1",
    "reset-css": "^2.2.1",
    "scrollmagic": "^2.0.7",
    "serve": "^10.1.1"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.1.5",
    "@frctl/handlebars": "krambuhl/fractal-handlebars",
    "ajv": "^5.5.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^4.1.10",
    "eslint": "^4.7.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "handlebars-helpers": "^0.10.0",
    "imagemin-cli": "^5.0.0",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^6.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-discard-empty": "^2.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-mixins": "^6.1.0",
    "postcss-nested": "^2.1.2",
    "postcss-pseudo-content-insert": "^0.3.0",
    "postcss-remove-root": "0.0.2",
    "postcss-reporter": "^5.0.0",
    "postcss-responsive-type": "^1.0.0",
    "progress-bar-webpack-plugin": "^1.10.0",
    "rimraf": "^2.6.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^17.0.0",
    "uglify-js": "^3.6.0",
    "webpack": "^3.6.0",
    "webpack-config-utils": "^2.3.0",
    "whatwg-fetch": "^3.0.0"
  }
}
